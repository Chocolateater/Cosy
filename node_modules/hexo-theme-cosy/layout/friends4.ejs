<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= page.title %> | <%= config.title %></title>
  <style>
    :root {
      --color-bg: #1e1e2e;
      --color-text: #cdd6f4;
      --color-primary: #89b4fa;
      --color-secondary: #a6e3a1;
      --color-tertiary: #f5c2e7;
    }
    
    body {
      font-family: Arial, sans-serif;
      background-color: var(--color-bg);
      color: var(--color-text);
      margin: 0;
      padding: 0;
      line-height: 1.6;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }
    
    h1, h2 {
      text-align: center;
      margin-bottom: 2rem;
    }
    
    .friends-section {
      margin-bottom: 4rem;
    }
    
    .friends-list {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 2rem;
    }
    
    .friend-item {
      background-color: rgba(255, 255, 255, 0.1);
      border-radius: 10px;
      padding: 1rem;
      transition: transform 0.3s ease;
    }
    
    .friend-item:hover {
      transform: translateY(-5px);
    }
    
    .friend-item a {
      text-decoration: none;
      color: inherit;
    }
    
    .recommended .friend-item {
      width: 250px;
      text-align: center;
    }
    
    .regular .friend-item, .useful .friend-item {
      width: 200px;
      display: flex;
      align-items: center;
    }
    
    .avatar {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      margin-bottom: 1rem;
    }
    
    .regular .avatar, .useful .avatar {
      width: 50px;
      height: 50px;
      margin-right: 1rem;
      margin-bottom: 0;
    }
    
    .friend-name {
      font-weight: bold;
      margin-bottom: 0.5rem;
    }
    
    .friend-desc {
      font-size: 0.9rem;
      opacity: 0.8;
    }
    
    .recommended .friend-item {
      background-color: rgba(137, 180, 250, 0.1);
    }
    
    .regular .friend-item {
      background-color: rgba(166, 227, 161, 0.1);
    }
    
    .useful .friend-item {
      background-color: rgba(245, 194, 231, 0.1);
    }
  </style>
</head>
<body>
  <div class="container">
    <h1><%= page.title %></h1>
    
    <% if (page.description) { %>
      <p><%= page.description %></p>
    <% } %>
    
    <% if (page.recommended && page.recommended.length > 0) { %>
      <section class="friends-section recommended">
        <h2>推荐博客</h2>
        <div class="friends-list">
          <% page.recommended.forEach(function(friend) { %>
            <div class="friend-item">
              <a href="<%= friend.url %>" target="_blank" rel="noopener noreferrer">
                <img src="<%= friend.avatar %>" alt="<%= friend.name %>" class="avatar">
                <div class="friend-name"><%= friend.name %></div>
                <div class="friend-desc"><%= friend.description %></div>
              </a>
            </div>
          <% }); %>
        </div>
      </section>
    <% } %>
    
    <% if (page.regular && page.regular.length > 0) { %>
      <section class="friends-section regular">
        <h2>普通友链</h2>
        <div class="friends-list">
          <% page.regular.forEach(function(friend) { %>
            <div class="friend-item">
              <a href="<%= friend.url %>" target="_blank" rel="noopener noreferrer">
                <img src="<%= friend.avatar %>" alt="<%= friend.name %>" class="avatar">
                <div>
                  <div class="friend-name"><%= friend.name %></div>
                  <div class="friend-desc"><%= friend.description %></div>
                </div>
              </a>
            </div>
          <% }); %>
        </div>
      </section>
    <% } %>
    
    <% if (page.useful && page.useful.length > 0) { %>
      <section class="friends-section useful">
        <h2>好用的网站</h2>
        <div class="friends-list">
          <% page.useful.forEach(function(site) { %>
            <div class="friend-item">
              <a href="<%= site.url %>" target="_blank" rel="noopener noreferrer">
                <img src="<%= site.avatar %>" alt="<%= site.name %>" class="avatar">
                <div>
                  <div class="friend-name"><%= site.name %></div>
                  <div class="friend-desc"><%= site.description %></div>
                </div>
              </a>
            </div>
          <% }); %>
        </div>
      </section>
    <% } %>
  </div>
</body>
</html>