<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= page.title %></title>
  <style>
    /* Basic layout for friends page */
    .body {
        overflow: auto;
    }
    .friends-page {
      max-width: 860px;
      margin: 0 auto;
      padding: 24px;
    }

    .section-title {
      font-size: 2rem;
      font-weight: 600;
      margin-bottom: 1rem;
      text-align: center;
    }

    /* Recommended Blogs: Largest, Most Prominent */
    .friend-list.recommended {
      display: flex;
      flex-wrap: wrap;
      gap: 24px;
      justify-content: center;
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .friend-item.recommended {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 220px;
      text-align: center;
    }

    .friend-avatar.recommended {
      background-image: linear-gradient(to right bottom, var(--color-primary), var(--color-primary-4));
      border-radius: 50%;
      padding: 4px;
      margin-bottom: 12px;
      position: relative;
      height: 120px;
      width: 120px;
    }

    .friend-avatar.recommended img {
      border-radius: 50%;
      width: 100%;
      height: 100%;
    }

    .friend-name.recommended {
      font-size: 1.4rem;
      margin: 0.5rem 0 0;
      font-weight: 700;
    }

    .friend-desc.recommended {
      font-size: 1rem;
      color: var(--color-font-2);
      margin: 0.5rem 0 0;
    }

    /* Regular Friends: Medium Prominence */
    .friend-list.regular {
      display: flex;
      flex-wrap: wrap;
      gap: 24px;
      list-style: none;
      padding: 0;
      margin: 2rem 0;
    }

    .friend-item.regular {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 180px;
      text-align: center;
    }

    .friend-avatar.regular {
      background-image: linear-gradient(to right bottom, var(--color-primary-2), var(--color-primary-4));
      border-radius: 50%;
      padding: 4px;
      margin-bottom: 12px;
      position: relative;
      height: 96px;
      width: 96px;
    }

    .friend-avatar.regular img {
      border-radius: 50%;
      width: 100%;
      height: 100%;
    }

    .friend-name.regular {
      font-size: 1.2rem;
      margin: 0.5rem 0 0;
      font-weight: 600;
    }

    .friend-desc.regular {
      font-size: 0.9rem;
      color: var(--color-font-2);
      margin: 0.5rem 0 0;
    }

    /* Useful Websites: Least Prominent */
    .friend-list.useful {
      display: flex;
      flex-wrap: wrap;
      gap: 24px;
      list-style: none;
      padding: 0;
      margin: 2rem 0;
    }

    .friend-item.useful {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 140px;
      text-align: center;
    }

    .friend-avatar.useful {
      background-image: linear-gradient(to right bottom, var(--color-primary-3), var(--color-primary-5));
      border-radius: 50%;
      padding: 4px;
      margin-bottom: 12px;
      position: relative;
      height: 72px;
      width: 72px;
    }

    .friend-avatar.useful img {
      border-radius: 50%;
      width: 100%;
      height: 100%;
    }

    .friend-name.useful {
      font-size: 1rem;
      margin: 0.5rem 0 0;
      font-weight: 500;
    }

    .friend-desc.useful {
      font-size: 0.8rem;
      color: var(--color-font-2);
      margin: 0.5rem 0 0;
    }

  </style>
</head>
<body>
<div class="resume friends-page">
  <div class="header">
    <h3><%= page.title %></h3>
    <!-- Optional description for the friends page -->
    <% if (page.description) { %>
      <div class="about-me">
        <p><%= page.description %></p>
      </div>
    <% } %>
  </div>

  <!-- Recommended Blogs Section -->
  <% if (page.recommended && page.recommended.length) { %>
    <h2 class="section-title">推荐博客</h2>
    <ul class="friend-list recommended">
      <% page.recommended.forEach(function(friend) { %>
        <li class="friend-item recommended">
          <figure class="friend-avatar recommended">
            <img src="<%= friend.avatar %>" alt="<%= friend.name %>">
          </figure>
          <div class="friend-info">
            <h4 class="friend-name recommended">
              <a href="<%= friend.url %>" target="_blank" rel="noopener noreferrer">
                <%- friend.name %>
              </a>
            </h4>
            <% if (friend.desc) { %>
              <p class="friend-desc recommended"><%- friend.desc %></p>
            <% } %>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <!-- Regular Friends Section -->
  <% if (page.regular && page.regular.length) { %>
    <h2 class="section-title">普通友链</h2>
    <ul class="friend-list regular">
      <% page.regular.forEach(function(friend) { %>
        <li class="friend-item regular">
          <figure class="friend-avatar regular">
            <img src="<%= friend.avatar %>" alt="<%= friend.name %>">
          </figure>
          <div class="friend-info">
            <h4 class="friend-name regular">
              <a href="<%= friend.url %>" target="_blank" rel="noopener noreferrer">
                <%- friend.name %>
              </a>
            </h4>
            <% if (friend.desc) { %>
              <p class="friend-desc regular"><%- friend.desc %></p>
            <% } %>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <!-- Useful Websites Section -->
  <% if (page.useful && page.useful.length) { %>
    <h2 class="section-title">好用的网站</h2>
    <ul class="friend-list useful">
      <% page.useful.forEach(function(friend) { %>
        <li class="friend-item useful">
          <figure class="friend-avatar useful">
            <img src="<%= friend.avatar %>" alt="<%= friend.name %>">
          </figure>
          <div class="friend-info">
            <h4 class="friend-name useful">
              <a href="<%= friend.url %>" target="_blank" rel="noopener noreferrer">
                <%- friend.name %>
              </a>
            </h4>
            <% if (friend.desc) { %>
              <p class="friend-desc useful"><%- friend.desc %></p>
            <% } %>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>

</div>
</body>
</html>
