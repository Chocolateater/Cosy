<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= page.title %></title>
  <style>
    /* Basic layout for friends page */
    .friends-page {
      max-width: 860px;
      margin: 0 auto;
      padding: 24px;
    }

    .friend-list {
      display: flex;
      flex-wrap: wrap;
      gap: 24px;
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .friend-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 180px;
      text-align: center;
    }

    .friend-avatar {
      background-image: linear-gradient(to right bottom, var(--color-primary), var(--color-primary-4));
      border-radius: 50%;
      padding: 4px;
      margin-bottom: 12px;
      position: relative;
      height: 96px;
      width: 96px;
    }

    .friend-avatar img {
      border-radius: 50%;
      width: 100%;
      height: 100%;
    }

    .friend-info {
      display: flex;
      flex-direction: column;
    }

    .friend-name {
      font-size: 1.2rem;
      margin: 0.5rem 0 0;
      font-weight: 600;
    }

    .friend-desc {
      font-size: 0.9rem;
      color: var(--color-font-2);
      margin: 0.5rem 0 0;
    }

    .resume .header {
      margin: 0 auto;
      max-width: 860px;
      padding: 24px 24px 0;
      position: relative;
    }

    .resume .header h3 {
      background: linear-gradient(to right, var(--color-primary), var(--color-font));
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      font-size: 40px;
      font-weight: 700;
      text-align: center;
    }

    .resume .header .about-me p {
      color: var(--color-font-2);
      font-weight: 400;
      line-height: 1.5;
      text-align: center;
    }

    .resume .content {
      margin: 0 auto;
      max-width: 860px;
      padding: 24px 12px;
    }
  </style>
</head>
<body>
<div class="resume friends-page">
  <div class="header">
    <h3><%= page.title %></h3>
    <!-- Optional description for the friends page -->
    <% if (page.description) { %>
      <div class="about-me">
        <p><%= page.description %></p>
      </div>
    <% } %>
  </div>

  <div class="content">
    <ul class="friend-list">
      <% if (page.friends && page.friends.length) { %>
        <% page.friends.forEach(function(friend) { %>
          <li class="friend-item">
            <figure class="friend-avatar">
              <img src="<%= friend.avatar %>" alt="<%= friend.name %>">
            </figure>
            <div class="friend-info">
              <h4 class="friend-name">
                <a href="<%= friend.url %>" target="_blank" rel="noopener noreferrer">
                  <%- friend.name %>
                </a>
              </h4>
              <% if (friend.desc) { %>
                <p class="friend-desc"><%- friend.desc %></p>
              <% } %>
            </div>
          </li>
        <% }) %>
      <% } else { %>
        <p>暂无友链。</p>
      <% } %>
    </ul>
  </div>
</div>
</body>
</html>