<div class="friends-container">
    <header class="friends-header">
      <h1><%= page.title || "友情链接" %></h1>
      <p><%= page.description || "欢迎来到我的朋友圈，这里有我最喜欢的博客和网站" %></p>
    </header>
  
    <div class="friends-content">
      <% if (page.topRecommended && page.topRecommended.length > 0) { %>
        <section class="friends-section top-section">
          <h2>最推荐的博客</h2>
          <div class="friends-list">
            <% page.topRecommended.forEach(function(friend) { %>
              <div class="friend-item top-recommended">
                <img src="<%= friend.avatar %>" alt="<%= friend.name %>" class="friend-avatar">
                <div class="friend-info">
                  <h3><%= friend.name %></h3>
                  <p><%= friend.description %></p>
                  <a href="<%= friend.url %>" target="_blank" class="friend-link">访问</a>
                </div>
              </div>
            <% }); %>
          </div>
        </section>
      <% } %>
  
      <div class="secondary-content">
        <% if (page.friends && page.friends.length > 0) { %>
          <section class="friends-section">
            <h2>友情链接</h2>
            <div class="friends-list">
              <% page.friends.forEach(function(friend) { %>
                <div class="friend-item">
                  <img src="<%= friend.avatar %>" alt="<%= friend.name %>" class="friend-avatar">
                  <div class="friend-info">
                    <h3><%= friend.name %></h3>
                    <p><%= friend.description %></p>
                    <a href="<%= friend.url %>" target="_blank" class="friend-link">访问</a>
                  </div>
                </div>
              <% }); %>
            </div>
          </section>
        <% } %>
  
        <% if (page.recommendedSites && page.recommendedSites.length > 0) { %>
          <section class="friends-section">
            <h2>推荐的网站</h2>
            <div class="friends-list">
              <% page.recommendedSites.forEach(function(site) { %>
                <div class="friend-item recommended-site">
                  <div class="site-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path fill="none" d="M0 0h24v24H0z"/><path d="M12 2c5.52 0 10 4.48 10 10s-4.48 10-10 10S2 17.52 2 12 6.48 2 12 2zm0 2c-4.42 0-8 3.58-8 8s3.58 8 8 8 8-3.58 8-8-3.58-8-8-8zm1 3v10h-2V7h2z" fill="currentColor"/></svg>
                  </div>
                  <div class="friend-info">
                    <h3><%= site.name %></h3>
                    <p><%= site.description %></p>
                    <a href="<%= site.url %>" target="_blank" class="friend-link">访问</a>
                  </div>
                </div>
              <% }); %>
            </div>
          </section>
        <% } %>
      </div>
    </div>
  </div>
  
  <style>
  .friends-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 24px;
    color: var(--color-text);
  }
  
  .friends-header {
    text-align: center;
    margin-bottom: 40px;
  }
  
  .friends-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(45deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }
  
  .friends-header p {
    color: var(--color-text-light);
    font-size: 1.1rem;
    max-width: 600px;
    margin: 10px auto 0;
  }
  
  .friends-content {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
  }
  
  .top-section {
    flex-basis: 100%;
  }
  
  .secondary-content {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
    flex-basis: 100%;
  }
  
  .friends-section {
    flex: 1;
    min-width: 300px;
  }
  
  .friends-section h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 20px;
    position: relative;
    padding-bottom: 10px;
  }
  
  .friends-section h2:after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50px;
    height: 3px;
    background: var(--color-primary);
    border-radius: 3px;
  }
  
  .friends-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
  }
  
  .friend-item {
    display: flex;
    align-items: center;
    padding: 15px;
    border-radius: 10px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .friend-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }
  
  .friend-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin-right: 15px;
    object-fit: cover;
  }
  
  .friend-info {
    flex: 1;
  }
  
  .friend-info h3 {
    margin: 0 0 5px;
    font-size: 1.1rem;
    color: var(--color-text);
  }
  
  .friend-info p {
    margin: 0 0 10px;
    font-size: 0.9rem;
    color: var(--color-text-light);
  }
  
  .friend-link {
    display: inline-block;
    padding: 5px 15px;
    background: var(--color-primary);
    color: white;
    text-decoration: none;
    border-radius: 20px;
    font-size: 0.9rem;
    transition: background 0.3s ease;
  }
  
  .friend-link:hover {
    background: var(--color-primary-dark);
  }
  
  .top-recommended {
    border: 2px solid var(--color-primary);
    background: linear-gradient(to right, rgba(var(--color-primary-rgb), 0.1), transparent);
  }
  
  .recommended-site .site-icon {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    border-radius: 50%;
    margin-right: 15px;
  }
  
  .recommended-site .site-icon svg {
    width: 30px;
    height: 30px;
    color: white;
  }
  
  @media (max-width: 768px) {
    .friends-content {
      flex-direction: column;
    }
    
    .secondary-content {
      flex-direction: column;
    }
    
    .friends-section {
      min-width: 100%;
    }
  }
  </style>