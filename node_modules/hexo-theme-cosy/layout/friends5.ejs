<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= page.title %> | <%= config.title %></title>
  <style>
    :root {
      --color-bg: #1e1e2e !important;
      --color-text: #cdd6f4 !important;
      --color-primary: #89b4fa !important;
      --color-secondary: #a6e3a1 !important;
      --color-tertiary: #f5c2e7 !important;
      --color-font: #cdd6f4 !important;
      --color-font-1: #bac2de !important;
      --color-font-2: #a6adc8 !important;
      --color-border: #45475a !important;
      --font-size: 16px !important;
    }

    body {
      font-family: Arial, sans-serif !important;
      background-color: var(--color-bg) !important;
      color: var(--color-text) !important;
      margin: 0 !important;
      padding: 0 !important;
      line-height: 1.6 !important;
      height: 100vh !important; /* 确保 body 至少有满屏的高度 */
      overflow: hidden !important; /* 隐藏 body 的滚动条 */
    }

    .container {
      max-width: 1200px !important;
      margin: 0 auto !important;
      padding: 2rem !important;
      height: calc(100vh - 4rem) !important; /* 计算容器高度以便填满可视区域 */
      overflow-y: auto !important; /* 使容器内出现滚动条 */
    }
    
    h1, h2 {
      text-align: center !important;
      margin-bottom: 2rem !important;
    }
    
    .friends-section {
      margin-bottom: 4rem !important;
    }
    
    .friends-list {
      display: flex !important;
      flex-wrap: wrap !important;
      justify-content: center !important;
      gap: 2rem !important;
    }
    
    .friend-item {
      transition: transform 0.3s ease !important;
    }
    
    .friend-item:hover {
      transform: translateY(-5px) !important;
    }
    
    .friend-item a {
      text-decoration: none !important;
      color: inherit !important;
    }
    
    .recommended .friend-item {
      width: 200px !important;
      text-align: center !important;
    }
    
    .regular .friend-item, .useful .friend-item {
      width: 200px !important;
      display: flex !important;
      align-items: center !important;
      background-color: rgba(255, 255, 255, 0.1) !important;
      border-radius: 10px !important;
      padding: 1rem !important;
    }
    
    .avatar {
      width: 120px !important;
      height: 120px !important;
      border-radius: 50% !important;
      margin-bottom: 1rem !important;
      background-image: linear-gradient(to right bottom, var(--color-primary), var(--color-secondary)) !important;
      padding: 4px !important;
    }
    
    .regular .avatar, .useful .avatar {
      width: 50px !important;
      height: 50px !important;
      margin-right: 1rem !important;
      margin-bottom: 0 !important;
    }
    
    .friend-name {
      font-weight: bold !important;
      margin-bottom: 0.5rem !important;
    }
    
    .friend-desc {
      font-size: 0.9rem !important;
      opacity: 0.8 !important;
    }
    
    .regular .friend-item {
      background-color: rgba(166, 227, 161, 0.1) !important;
    }
    
    .useful .friend-item {
      background-color: rgba(245, 194, 231, 0.1) !important;
    }

    /* 添加滚动条样式 */
    .cosy-scrollbar::-webkit-scrollbar {
      width: 8px !important;
    }

    .cosy-scrollbar::-webkit-scrollbar-track {
      background: var(--color-bg) !important;
    }

    .cosy-scrollbar::-webkit-scrollbar-thumb {
      background-color: var(--color-border) !important;
      border-radius: 4px !important;
    }

    .cosy-scrollbar::-webkit-scrollbar-thumb:hover {
      background-color: var(--color-font-2) !important;
    }
  </style>
</head>
<body>
  <div class="container cosy-scrollbar">
    <h1><%= page.title %></h1>
    
    <% if (page.description) { %>
      <p><%= page.description %></p>
    <% } %>
    
    <% if (page.recommended && page.recommended.length > 0) { %>
      <section class="friends-section recommended">
        <h2>推荐博客</h2>
        <div class="friends-list">
          <% page.recommended.forEach(function(friend) { %>
            <div class="friend-item">
              <a href="<%= friend.url %>" target="_blank" rel="noopener noreferrer">
                <figure class="avatar">
                  <img src="<%= friend.avatar %>" alt="<%= friend.name %>" style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover;">
                </figure>
                <div class="friend-name"><%= friend.name %></div>
                <div class="friend-desc"><%= friend.description %></div>
              </a>
            </div>
          <% }); %>
        </div>
      </section>
    <% } %>
    
    <% if (page.regular && page.regular.length > 0) { %>
      <section class="friends-section regular">
        <h2>普通友链</h2>
        <div class="friends-list">
          <% page.regular.forEach(function(friend) { %>
            <div class="friend-item">
              <a href="<%= friend.url %>" target="_blank" rel="noopener noreferrer">
                <img src="<%= friend.avatar %>" alt="<%= friend.name %>" class="avatar">
                <div>
                  <div class="friend-name"><%= friend.name %></div>
                  <div class="friend-desc"><%= friend.description %></div>
                </div>
              </a>
            </div>
          <% }); %>
        </div>
      </section>
    <% } %>
    
    <% if (page.useful && page.useful.length > 0) { %>
      <section class="friends-section useful">
        <h2>好用的网站</h2>
        <div class="friends-list">
          <% page.useful.forEach(function(site) { %>
            <div class="friend-item">
              <a href="<%= site.url %>" target="_blank" rel="noopener noreferrer">
                <img src="<%= site.avatar %>" alt="<%= site.name %>" class="avatar">
                <div>
                  <div class="friend-name"><%= site.name %></div>
                  <div class="friend-desc"><%= site.description %></div>
                </div>
              </a>
            </div>
          <% }); %>
        </div>
      </section>
    <% } %>
  </div>
</body>
</html>
